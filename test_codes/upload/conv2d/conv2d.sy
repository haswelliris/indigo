int filter[100][100] = {};
int array[100][100] = {};
int result[200][200] = {};
void Conv2(int filterW, int filterH, int arrW, int arrH, int filter[][100], int arr[][100])
{
    int temp;
    int i = 0;
    int j = 0;
    int m = 0;
    int n = 0;
    while (i < filterH + arrH - 1)
    {
        j = 0;
        while (j < filterW + arrW - 1)
        {
            temp = 0;
            m = 0;
            while (m < filterH)
            {
                n = 0;
                while (n < filterW)
                {
                    if ((i - m) >= 0 && (i - m) < arrH && (j - n) >= 0 && (j - n) < arrW)
                    {
                        temp = temp + filter[m][n] * arr[i - m][j - n];
                    }
                    n = n + 1;
                }
                m = m + 1;
            }
            result[i][j] = temp;
            j = j + 1;
        }
        i = i + 1;
    }
}

